integer  TOUCH_ACTIVE        = TRUE;                // TOUCH_ACTIVE=1      Set to 0 if touch is handled by another script e.g. baby
integer  isHuman             = FALSE;               // HUMAN=0
integer  saveStatus          = FALSE;               // SERVER_SAVE=0
